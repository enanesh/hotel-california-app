<section  id="reviews-form">
    <div class="container mt-3">
        <div class="row">
            <div class="col-sm-5 col-md-6 col-12 pb-4">
                <h3>Comments</h3>
                 {{#each reviews1 as |review|}}
                    <div class="comment mt-4 text-justify">
                        <img src="https://i.imgur.com/yTFUilP.jpg" alt="" class="rounded-circle" width="40" height="40">
                        <h4>{{guest.username}}</h4>
                        <span class="font-weight-light font-italic text-secondary">- {{format_time review.created_at}} {{format_date review.created_at}}</span>
                        <br>
                        <p>{{review.comment}}</p>
                    </div>
                 {{/each}}
            </div>
            <div class="col-lg-4 col-md-5 col-sm-4 offset-md-1 offset-sm-1 col-12 mt-4">
                <form id="algin-form">
                    <div class="form-group">
                        <h4>Leave a comment</h4>
                        <label for="message">Message</label>
                        <textarea name="msg" id="reviews" msg cols="30" rows="5" class="form-control" style="background-color: rgb(204, 236, 248);"></textarea>
                    </div>
    
                    <div class="form-group">
                        <button type="submit" id="post" class="btn btn-primary mt-3 mb-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-square-text" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1h-2.5a2 2 0 0 0-1.6.8L8 14.333 6.1 11.8a2 2 0 0 0-1.6-.8H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2.5a1 1 0 0 1 .8.4l1.9 2.533a1 1 0 0 0 1.6 0l1.9-2.533a1 1 0 0 1 .8-.4H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                        </svg> Post Comment</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="./js/reviews.js"></script>